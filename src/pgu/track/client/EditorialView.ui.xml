<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <g:HTMLPanel>

        <b:FluidContainer>
        
            <b:Row>
             <b:Column size="6">
              <b:Alert ui:field="userBox" type="INFO" close="false">
              </b:Alert>
             </b:Column>
            </b:Row>
            
            <b:Row>
             <b:Column size="6">
                <b:WellForm>
                    <b:ControlLabel>Editorial title</b:ControlLabel>
                    <b:TextBox ui:field="titleBox" placeholder="Advice..."/>
                    <b:ControlLabel></b:ControlLabel>
                    <b:Button addStyleNames="btn" ui:field="createBtn">Create</b:Button>
                </b:WellForm>
             </b:Column>
            </b:Row>
            
            <b:Row>
            </b:Row>
            
            <!-- list -->
            <b:Row>
             <b:Column size="12">
              <g:SimplePanel ui:field="containerEditorials"></g:SimplePanel>
             </b:Column>
            </b:Row>
        </b:FluidContainer>
    
    </g:HTMLPanel>
</ui:UiBinder> 